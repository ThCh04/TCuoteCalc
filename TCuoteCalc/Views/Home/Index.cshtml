@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">T-CuoteCalulator</h1>
    <h5>calcule sus cuotas de préstamos</h5>
</div>

<div class="container align-content-center">
    <form class="row g-3 mt-3" method="post" asp-controller="Result" asp-action="ResultView">
        <div class="form-group">
            <label for="amount" class="form-label"><strong>Monto del Préstamo</strong></label>
            <input class="form-control" type="number" step="0.01" name="amount" required></input>
        </div>

        <div class="form-group">
            <label for="chooser" class="form-label"><strong>Tipo de Préstamo</strong></label>
            <select class="form-control" name="chooser" id="chooser">
                <option value="no">Seleccionar tipo de préstamo</option>
                <option value="auto">Automóvil</option>
                <option value="hip">Hipotecario</option>
                <option value="person">Personal</option>
            </select>
        </div>

       
        <div class="form-group">
            <label for="percentxt" class="form-label"><strong>Tasa del Préstamo</strong></label>
            <input class="form-control" type="text"  readonly name="percentxt" id="percentxt" ></input>
        </div>

        <div class="form-group">
            <label for="months" class="form-label"><strong>Meses del Préstamo</strong></label>
            <select class="form-control" id="months" name="months">
                <option value="12">12 meses</option>
                <option value="18">18 meses</option>
                <option value="24">24 meses</option>
                <option value="30">30 meses</option>
                <option value="36">36 meses</option>
                <option value="42">42 meses</option>
                <option value="48">48 meses</option>
                <option value="54">54 meses</option>
                <option value="60">60 meses</option>
                <option value="66">66 meses</option>
                <option value="72">72 meses</option>
                <option value="78">78 meses</option>
                <option value="84">84 meses</option>
                <option value="90">90 meses</option>
                <option value="96">96 meses</option>
                <option value="102">102 meses</option>
                <option value="108">108 meses</option>
                <option value="114">114 meses</option>
                <option value="120">120 meses</option>
            </select>
        </div>

        <div class="form-group">
            <button id="cal" name="cal" type="submit" class="btn btn-success" disabled>Calcular</button>
        </div>
    </form>


</div>
